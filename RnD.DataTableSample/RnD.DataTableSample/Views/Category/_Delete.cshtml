@model RnD.DataTableSample.Models.Category
@using (Ajax.BeginForm("Delete", "Category", null,
        new AjaxOptions
        {
            UpdateTargetId = "deleteCategoryMess",
            InsertionMode = InsertionMode.Replace,
            HttpMethod = "POST",
            OnSuccess = "DeleteCategorySuccess()",
        }, new { @id = "deleteCategoryForm" }))
{  
    
    <fieldset>
        <legend>Category:</legend>
        <div id="deleteCategoryMess" class="error">
        </div>
        <div id="deleteCategoryConfirmMess">
            @Html.HiddenFor(model => model.CategoryId)
            <div class="display-field">
                <strong>Category Name: </strong>@Html.DisplayFor(model => model.Name)
            </div>
            <div class="display-field">
                Do you want delete this category?
            </div>
        </div>
    </fieldset>
}